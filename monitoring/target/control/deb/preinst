#!/bin/sh

set -e

if ! getent group thingsboard >/dev/null; then
    addgroup --system thingsboard
fi

if ! getent passwd thingsboard >/dev/null; then
    adduser --quiet \
            --system \
            --ingroup thingsboard \
            --disabled-login \
            --disabled-password \
            --home /usr/share/tb-monitoring \
            --no-create-home \
            -gecos "Thingsboard application" \
            thingsboard
fi

exit 0
